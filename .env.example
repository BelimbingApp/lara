# Application name. Shown in page titles, auth screens, and used for Redis/cache/session key prefixes when sharing infra. Change to your product name.
APP_NAME=Belimbing
# local — Development on your machine
# staging — Pre-production testing
# production — Live application
# testing — Automated tests (often set in phpunit.xml)
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://local.blb.lara

# TLS/SSL Certificate Mode for Caddy
# Controls how Caddy handles HTTPS certificates:
#
# - "internal" = Self-signed certificates generated by Caddy
#   Use for: Local dev, staging, or production behind another proxy
#   Requires: One-time SSL trust setup (automated on first run)
#
# - "email@example.com" = Let's Encrypt automatic certificates
#   Use for: Public-facing production with real domain
#   Requires: Valid domain pointing to your server, ports 80/443 open
#
# - Custom cert path in Caddyfile (set TLS_MODE=off or any non-email value)
#   Use for: Existing SSL certificates
#   Requires: Manual Caddyfile modification
#
# Local and testing environments always use "internal" regardless of this setting.
# TLS_MODE=internal

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Built-in PHP server: number of worker processes (for `php artisan serve`)
PHP_CLI_SERVER_WORKERS=4

# Bcrypt cost factor for password hashing (higher = slower, more secure; 12 is a good default)
BCRYPT_ROUNDS=12

# Logging: stack uses channels defined in config/logging.php
LOG_CHANNEL=stack
# Stack driver: single (one file), daily, stderr, etc.
LOG_STACK=single
# Deprecation notices: null to ignore, or a channel name
LOG_DEPRECATIONS_CHANNEL=null
# Log level: debug, info, notice, warning, error, critical, alert, emergency
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=blb
DB_USERNAME=postgres
DB_PASSWORD=test123

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

REVERB_APP_ID=belimbing-local
REVERB_APP_KEY=belimbing-key
REVERB_APP_SECRET=belimbing-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Dev seed: licensee company name (id=1). Used by dev:reseed when creating the licensee company.
# DEV_LICENSEE_COMPANY_NAME=My Company

# Dev seed: initial admin user (DevUserSeeder). Delete or leave unset in production.
# DEV_ADMIN_NAME="Blb Admin"
# DEV_ADMIN_EMAIL=admin@example.com
# DEV_ADMIN_PASSWORD=password
