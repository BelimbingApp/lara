APP_NAME=Belimbing
# local — Development on your machine
# staging — Pre-production testing
# production — Live application
# testing — Automated tests (often set in phpunit.xml)
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://local.blb.lara

# TLS/SSL Certificate Mode for Caddy
# Controls how Caddy handles HTTPS certificates:
#
# - "internal" = Self-signed certificates generated by Caddy
#   Use for: Local dev, staging, or production behind another proxy
#   Requires: One-time SSL trust setup (automated on first run)
#
# - "email@example.com" = Let's Encrypt automatic certificates
#   Use for: Public-facing production with real domain
#   Requires: Valid domain pointing to your server, ports 80/443 open
#
# - Custom cert path in Caddyfile (set TLS_MODE=off or any non-email value)
#   Use for: Existing SSL certificates
#   Requires: Manual Caddyfile modification
#
# Local and testing environments always use "internal" regardless of this setting.
# TLS_MODE=internal

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=blb
DB_USERNAME=postgres
DB_PASSWORD=test123

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Dev seed: initial admin user (DevAdminUserSeeder). Delete or leave unset in production.
# Only used when users table is empty and seeder is run explicitly.
