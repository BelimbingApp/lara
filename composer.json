{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "belimbing/blb",
    "type": "project",
    "description": "Belimbing (BLB) - Laravel application with Livewire Volt and MaryUI",
    "keywords": [
        "laravel",
        "livewire",
        "volt",
        "mary-ui",
        "tall-stack"
    ],
    "license": "AGPL-3.0-only",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.41.1",
        "laravel/tinker": "^2.10.2",
        "livewire/volt": "^1.10.1",
        "robsontenorio/mary": "^2.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "laravel/pail": "^1.2.4",
        "laravel/pint": "^1.26.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^4.1.6",
        "pestphp/pest-plugin-laravel": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "@php -r \"$jsCmd = (shell_exec('command -v bun 2>/dev/null') ? 'bun run dev' : 'npm run dev'); $port = getenv('APP_PORT') ?: '8000'; system('npx concurrently -c \\\"#93c5fd,#c4b5fd,#fb7185,#fdba74\\\" \\\"php artisan serve --port=' . $port . '\\\" \\\"php artisan queue:listen --tries=1\\\" \\\"php artisan pail --timeout=0\\\" \\\"' . $jsCmd . '\\\" --names=server,queue,logs,vite --kill-others');\""
        ],
        "vite": [
            "@php -r \"$jsCmd = (shell_exec('command -v bun 2>/dev/null') ? 'bun run dev' : 'npm run dev'); passthru($jsCmd);\""
        ],
        "build": [
            "@php -r \"$jsCmd = (shell_exec('command -v bun 2>/dev/null') ? 'bun run build' : 'npm run build'); passthru($jsCmd);\""
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "lint": [
            "@php artisan pint"
        ],
        "format": [
            "@lint"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
